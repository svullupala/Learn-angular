{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "outDir": "compiled",
    "paths": {
      "core": ["app/core"],
      "job/*": ["app/job/*"],
      "theme": ["app/theme"],
      "shared/*": ["app/shared/*"],
      "wizard/*": ["app/wizard/*"],
      "identity/*": ["app/identity/*"],
      "appserver/*": ["app/appserver/*"],
      "slapolicy/*": ["app/manage-protection/slapolicy/*"],
      "hypervisor/*": ["app/manage-protection/hypervisor/*"],
      "applications/*": ["app/manage-protection/applications/*"],
      "reports/*": ["app/reports-and-logs/reports/*"],
      "site/*": ["app/system-configuration/site/*"],
      "vadp/*": ["app/system-configuration/vadp-proxy-monitor/*"],
      "ldapsmtp/*": ["app/system-configuration/ldap-smtp/*"],
      "scripts/*": ["app/system-configuration/scripts/*"],
      "diskstorage/*": ["app/system-configuration/backup-storage/disk-storage/*"],
      "cloud/*": ["app/system-configuration/backup-storage/cloud/*"],
      "inventory/*": ["app/inventory/*"],
      "applicationinventory/*": ["app/manage-protection/manage-applications/shared/*"],
      "hypervisorinventory/*": ["app/manage-protection/manage-hypervisors/shared/*"]
    },
    "lib": [
      "es2015",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "compiled",
    "src/**/*.spec.ts",
    "src/**/*.e2e.ts"
  ],
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useWebpackText": true
  },
  "angularCompilerOptions": {
    "genDir": "compiled",
    "skipMetadataEmit": true
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
